<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSystemAlarmStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="안드로이드 기본 알람 사용하기" />

        <Button
            android:id="@+id/btnSystemAlarmStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 끄기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUserMediaAlarmStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사용자 미디어를 통한 알람 사용하기" />

        <Button
            android:id="@+id/btnUserMediaAlarmStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 끄기" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnVibrator"
        android:text="진동 알림 사용하기"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStatusAlarm"
        android:text="상태창에 알람 띄우기"/>

</LinearLayout>